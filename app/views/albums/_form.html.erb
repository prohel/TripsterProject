<%= form_for [@trip, @album] , :html => { :class => "form-horizontal album"} do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trip_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.hidden_field :trip_id, :class => 'number_field' %>
      <%= @trip.name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :created_by, :class => 'control-label' %>
    <div class="controls">
      <%= User.find(@album.created_by).name %>
      <%= f.hidden_field :created_by, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                trip_path(@trip), :class => 'btn' %>
  </div>
<% end %>
