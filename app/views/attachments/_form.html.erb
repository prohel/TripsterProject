<%= form_for @attachment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attachment_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attachment_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trip_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :trip_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :album_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :album_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :created_by, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :created_by, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                attachments_path, :class => 'btn' %>
  </div>
<% end %>
