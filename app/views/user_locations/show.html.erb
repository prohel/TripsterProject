<%- model_class = UserLocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user_location.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>
  <dd><%= @user_location.location_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visited) %>:</strong></dt>
  <dd><%= @user_location.visited %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_user_locations_path, :class => 'btn'  %>
</div>
