<%= form_for [@trip, @album, @album_comment] do |f| %>
  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :album_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    Add a comment
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area span7', :rows => '5' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Post Comment", :class => 'btn btn-primary' %>
  </div>
<% end %>
